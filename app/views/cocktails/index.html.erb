<h1>Cocktails</h1>

<div class="container d-flex flex-wrap justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <% if cocktail.photo? %>
      <% background_url = cl_image_path cocktail.photo, width: 400, height: 500, crop: :fill %>
    <% end %>
    <div class="card-category col-3 m-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
      <%= link_to cocktail.name , cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>

