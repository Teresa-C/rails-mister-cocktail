<h1><%= @cocktail.name %></h1>
<p>Ingredients List</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> <%= dose.ingredient.name %></li>
    <%= link_to "Delete", dose_path(dose), method: :delete  %>
  <% end %>
</ul>
<%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail) %>
